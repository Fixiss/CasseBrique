<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/TitreCasseBrique"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"/>

        <Button
            android:id="@+id/button_jouer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:insetTop="40dp"
            android:insetBottom="20dp"
            android:onClick="OnClickJouerButton"
            android:text="Jouer" />

        <Button
            android:id="@+id/button_classement"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:insetTop="20dp"
            android:insetBottom="20dp"
            android:onClick="OnClickClassementButton"
            android:text="Classement" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>